<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <CheckBox
        android:id="@+id/burgar"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="114dp"
        android:layout_marginTop="130dp"
        android:gravity="center"
        android:text="Burgar 50"
        android:textSize="25dp" />

    <CheckBox
        android:id="@+id/chowmine"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="126dp"
        android:gravity="center"
        android:text="chowmine60"
        android:textSize="25dp" />

    <CheckBox
        android:id="@+id/pizza"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="179dp"
        android:gravity="center"
        android:text="Pizza 70"
        android:textSize="25dp" />

    <CheckBox
        android:id="@+id/hotdog"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="264dp"
        android:gravity="center"
        android:text="hotdog 50"
        android:textSize="25dp" />

    <CheckBox
        android:id="@+id/manchurian"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="280dp"
        android:gravity="center"
        android:text="manchurian 150"
        android:textSize="25dp" />

    <CheckBox
        android:id="@+id/pasta"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="pasta 100"
        android:textSize="25dp" />

    <CheckBox
        android:id="@+id/sandwich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="192dp"
        android:gravity="center"
        android:text="sandwich 90"
        android:textSize="25dp" />

    <CheckBox
        android:id="@+id/fries"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/pizza"
        android:layout_marginTop="237dp"
        android:gravity="center"
        android:text="fries 55"
        android:textSize="25dp" />

    <Button
        android:id="@+id/order"
        android:layout_width="182dp"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:gravity="center"
        android:text="Order places"
        android:textSize="25dp" />


</RelativeLayout>